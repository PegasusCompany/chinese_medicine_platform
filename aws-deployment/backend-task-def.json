{
  "family": "chinese-medicine-platform-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::975049890307:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::975049890307:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "975049890307.dkr.ecr.us-east-1.amazonaws.com/chinese-medicine-platform-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "5000"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:ChineseMedicine2024!@chinese-medicine-platform-db.c3s66u28cz4z.us-east-1.rds.amazonaws.com:5432/chinese_medicine_db"
        },
        {
          "name": "JWT_SECRET",
          "value": "your-super-secret-jwt-key-for-hackathon-2024-1759259926"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/chinese-medicine-platform-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
